<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ClusterHeadacheTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary color from Rails app (#4f46e5) -->
        <item name="colorPrimary">#4f46e5</item>
        <item name="colorPrimaryVariant">#3730a3</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary color -->
        <item name="colorSecondary">#4f46e5</item>
        <item name="colorSecondaryVariant">#3730a3</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Action bar style -->
        <item name="actionBarStyle">@style/Widget.ClusterHeadacheTracker.ActionBar</item>
    </style>

    <style name="Theme.ClusterHeadacheTracker" parent="Base.Theme.ClusterHeadacheTracker" />
    
    <!-- Custom Action Bar style -->
    <style name="Widget.ClusterHeadacheTracker.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">?attr/colorPrimary</item>
        <item name="titleTextStyle">@style/Widget.ClusterHeadacheTracker.ActionBar.TitleText</item>
    </style>
    
    <!-- Action Bar title text style -->
    <style name="Widget.ClusterHeadacheTracker.ActionBar.TitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>